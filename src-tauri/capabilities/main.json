{
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "window:allow-close",
    "window:allow-toggle-maximize",
    "window:allow-minimize",
    "window:allow-start-dragging",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-read-text",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "deep-link:default",
    "http:allow-fetch",
    "http:default",
    "updater:allow-check",
    "updater:default",
    "dialog:default",
    "shell:default",
    "cli:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://thunderstore.io/api/*"
        },
        {
          "url": "https://raw.githubusercontent.com/Kesomannen/gale/master/CHANGELOG.md"
        }
      ],
      "deny": []
    }
  ]
}